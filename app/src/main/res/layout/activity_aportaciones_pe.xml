<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AportacionesPe">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/formulario_aportacionPe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="visible">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blanco"
            android:gravity="center"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/blanco"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/blanco"
                    android:gravity="center"
                    android:text="Aportaciones relevantes a la mejora del PE"
                    android:textColor="@color/negro"
                    android:textSize="14dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@color/blanco"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/blanco"
                    android:gravity="left"
                    android:text="Descripcion de la aportacion"
                    android:textColor="@color/negro"
                    android:textSize="17dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/caja_edit_aportacionPE"

                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="10dp"
                android:background="@color/blanco"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/aportacionPE_texto"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:background="@color/blanco"
                    android:gravity="top"
                    android:textColorHint="@color/negro"
                    android:textSize="17dp"/>
                <ImageView
                    android:id="@+id/guardar_aportacionPE"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="15dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/palomita" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/caja_aportacionPE_final"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_margin="10dp"
                android:background="@color/blanco"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/aportacionPE"
                    android:layout_width="400dp"
                    android:layout_height="22dp"
                    android:background="@color/blanco"
                    android:gravity="bottom"
                    android:text="nombre de usuario"
                    android:textColorHint="@color/negro"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/cambiar_aportacionPE"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="15dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/palomita"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/caja_siguiente_scroll11"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@color/blanco"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/regresar_preDist"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_margin="15dp"
                    android:layout_marginTop="30dp"
                    android:text="Regresar a premios"
                    android:textColor="@color/negro"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/finalizar_formulario"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_margin="15dp"
                    android:layout_marginTop="30dp"
                    android:text="Finalizar formulario"
                    android:textColor="@color/negro"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>